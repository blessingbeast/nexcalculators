<%- include('../partials/header') %>

    <div class="static-page-container" style="max-width: 800px; margin: 0 auto; padding: 60px 20px;">

        <div style="text-align: center; margin-bottom: 50px;">
            <h1 style="font-size: 2.5rem; font-weight: 800; color: #1e293b;">Get in Touch</h1>
            <p style="font-size: 1.1rem; color: #64748b;">Have a question or feature request? Drop us a message!</p>
        </div>

        <div style="max-width: 600px; margin: 0 auto;">

            <!-- Form Column -->
            <div
                style="background: white; padding: 40px; border-radius: 20px; box-shadow: 0 20px 40px -10px rgba(0,0,0,0.1);">
                <h3 style="margin-bottom: 20px; color: #334155; text-align: center;">Send us a Message</h3>

                <!-- 
                Powered by Web3Forms. 
                INSTRUCTIONS FOR USER:
                1. Go to https://web3forms.com/
                2. Enter your email address to get an Access Key.
                3. Paste the Access Key in the value="" attribute below.
            -->
                <form action="https://api.web3forms.com/submit" method="POST">

                    <!-- Replace this value with your actual Access Key -->
                    <input type="hidden" name="access_key" value="43eac935-6d22-45d9-9e7b-795d1e9e8900">

                    <!-- Optional: Redirect after success -->
                    <input type="hidden" name="redirect" value="http://localhost:3000/contact?success=true">

                    <div style="margin-bottom: 20px;">
                        <label
                            style="display: block; margin-bottom: 8px; font-weight: 600; color: #475569;">Name</label>
                        <input type="text" name="name" required placeholder="John Doe"
                            style="width: 100%; padding: 12px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 1rem;">
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label
                            style="display: block; margin-bottom: 8px; font-weight: 600; color: #475569;">Email</label>
                        <input type="email" name="email" required placeholder="john@example.com"
                            style="width: 100%; padding: 12px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 1rem;">
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label
                            style="display: block; margin-bottom: 8px; font-weight: 600; color: #475569;">Subject</label>
                        <select name="subject"
                            style="width: 100%; padding: 12px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 1rem; background: white;">
                            <option>Feedback / Suggestion</option>
                            <option>Report a Bug</option>
                            <option>Business Partnership</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <div style="margin-bottom: 20px;">
                        <label
                            style="display: block; margin-bottom: 8px; font-weight: 600; color: #475569;">Message</label>
                        <textarea name="message" required rows="4" placeholder="Type your message here..."
                            style="width: 100%; padding: 12px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 1rem;"></textarea>
                    </div>

                    <button type="submit"
                        style="width: 100%; background: #2563eb; color: white; border: none; padding: 14px; border-radius: 8px; font-weight: 700; font-size: 1rem; cursor: pointer; transition: background 0.2s;">Send
                        Message</button>
                </form>

                <p style="margin-top: 15px; font-size: 0.85rem; color: #94a3b8; text-align: center;">
                    We respect your privacy. Your email usage is limited to this inquiry.
                </p>
            </div>

        </div>
    </div>

    <script>
        // Simple check to show success message if redirected back
        if (window.location.search.includes('success=true')) {
            const formDiv = document.querySelector('form').parentElement;
            formDiv.innerHTML = `
            <div style="text-align: center; padding: 20px;">
                <div style="font-size: 3rem; margin-bottom: 10px;">âœ…</div>
                <h3 style="color: #16a34a;">Message Sent!</h3>
                <p style="color: #64748b;">Thanks for reaching out. We'll get back to you shortly.</p>
                <a href="/" style="display: inline-block; margin-top: 20px; color: #2563eb; text-decoration: none; font-weight: 600;">Back to Home</a>
            </div>
        `;
        }
    </script>

    <style>
        @media (max-width: 768px) {
            div[style*="grid-template-columns"] {
                grid-template-columns: 1fr !important;
            }
        }

        button:hover {
            background: #1d4ed8 !important;
        }
    </style>

    <%- include('../partials/footer') %>